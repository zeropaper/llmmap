---
import Nav from '../components/Nav.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="LLMMap - an experiment about term associations in large language models" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<Nav className="tada" />
		</header>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);

		--color: white;
		--background-color: #01052c;

		--spacing: 0.5rem;
	}
	html {
		font-family: system-ui, sans-serif;
		font-weight: 400;
		margin: 0;
		padding: 0;
		color: var(--color);
		background: var(--background-color);
		overflow: hidden;
		height: 100%;
	}
	body {
		margin: 0;
		padding: 0;
		overflow: hidden;
		display: grid;
		grid-template-rows: max-content auto 40px;
		grid-template-columns: 1fr;
		height: 100%;
		background-image: radial-gradient(#0000009c, transparent);
	}
	body > header {
		padding: var(--spacing);
	}
	header > nav ul {
		display: flex;
		list-style: none;
		gap: calc(2 * var(--spacing));
		margin: 0;
		padding: 0;
	}
	a {
		color: inherit;
		text-decoration: none;
	}
	.active a,
	a:active {
		color: rgb(var(--accent));
	}
</style>
